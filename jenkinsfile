pipeline {

    agent any
    stages {
               
        stage('Code Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'githubcredential']]])
            }
        }

        stage('Code Build') {
            steps {
                  def mvnHome = tool name: 'M3', type: 'maven'
	              def mvnCMD = "${mvnHome}/bin/mvn"
	              sh "${mvnCMD} package"
            }
        }

        stage('Code Test') {
            steps {
                  def mvnHome = tool name: 'M3', type: 'maven'
	              def mvnCMD = "${mvnHome}/bin/mvn"
	              sh "${mvnCMD} test"
               
            }
        }

    }   
}
